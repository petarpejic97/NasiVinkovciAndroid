<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ActivityPogledajPrijedloge">

    <TextView
        android:id="@+id/tvprijedlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        tools:text="Mjesto za prijedlog sadsadasdasdasdasd asdasdasdasdasdas"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvimpr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvprijedlog"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        tools:text="Ime i prezime"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tvoib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvimpr"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        tools:text="Oib "
        android:textSize="13sp" />
</RelativeLayout>